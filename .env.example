# Example .env file for development
# Copy this file to `.env` and fill in the values before running the app.

# MongoDB connection string (replace with your MongoDB URI)
# For local MongoDB: mongodb://localhost:27017/chat-app
MONGODB_URI=

# Server port
PORT=3000

# JWT configuration
# Use a strong secret in production. NEVER commit your real secret to source control.
JWT_SECRET=change_me_to_a_strong_secret
JWT_EXPIRE=7d

# How many minutes after sending a message a user may edit it
EDIT_WINDOW_MINUTES=15

# Debug Mode - set to true to enable console.log output
DEBUG_MODE=false

# Example:
# MONGODB_URI=mongodb://localhost:27017/chat-app
# PORT=3000
# JWT_SECRET=very_long_random_string_here
# JWT_EXPIRE=7d
# EDIT_WINDOW_MINUTES=15
# DEBUG_MODE=false